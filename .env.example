# ======= TIMEZONE & UID/GID =======
TZ=Europe/Lisbon
PUID=1000
PGID=1000

# ======= NFS (Passo 2 – OBRIGATÓRIO) =======
# IP/host do servidor NFS
NFS_SERVER=IP_SERVIDOR_NFS
# Caminhos remotos exportados no NAS
NFS_MEDIA_REMOTE=/media
NFS_DOWNLOADS_REMOTE=/downloads
# Pontos de montagem locais no contentor
NFS_MEDIA_MOUNT=/mnt/media
NFS_DOWNLOADS_MOUNT=/mnt/downloads

# ======= GLUETUN / PIA =======
VPN_SERVICE_PROVIDER=PROVEDOR_VPN
# openvpn (recomendado) | wireguard (se tiveres as chaves)
VPN_TYPE=openvpn
OPENVPN_USER=USERNAME
OPENVPN_PASSWORD=PASSWORD
# Evitar países inválidos para PIA; usa regiões:
SERVER_REGIONS=Netherlands
# (alternativas: deixa vazio, ou usa SERVER_CITIES=/SERVER_COUNTRIES conforme suportado)
SERVER_COUNTRIES=
SERVER_CITIES=

BLOCK_MALICIOUS=on
DOT=on

# (calar avisos se não usares wireguard)
WIREGUARD_PRIVATE_KEY=
WIREGUARD_ADDRESSES=

# ======= TDARR (haveagitgat) =======
TDARR_SERVER_IP=0.0.0.0
TDARR_SERVER_PORT=8266
TDARR_WEBUI_PORT=8265
TDARR_INTERNAL_NODE=true
TDARR_NODE_IP=0.0.0.0
TDARR_NODE_PORT=8267
TDARR_NODE_NAME=
